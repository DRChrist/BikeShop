@model BikeShop.Models.Entities.Bike
@{
    ViewData["Title"] = @Model.Name;
}

    <form asp-controller="Bike" asp-action="Update" method="POST">
        <input class="form-control" type="Hidden" asp-for="BikeId">
      
      <div class="row col-md-6">
          &nbsp
        <div class="form-group">          
                <label asp-for="Name" class="control-label"></label>
                <div>
                <input class="form-control "  asp-for="Name">
            </div>
        </div>
        
          <div class="form-group">       
                <label asp-for="Manufacturer" class="control-label"></label>
                <div>
                <input class="form-control " asp-for="Manufacturer" >
            </div>
        </div>

        <div class="form-group">       
                <label asp-for="Gears" class="control-label"></label>
                <div>
                <input class="form-control " asp-for="Gears">
            </div>
        </div>

        <div class="form-group">       
                <label asp-for="Type" class="control-label"></label>
                <div>
                <input class="form-control " asp-for="Type">
            </div>
        </div>

        <div class="form-group">       
                <label asp-for="Gender" class="control-label"></label>
                <div>
                <input class="form-control " asp-for="Gender">
            </div>
        </div>

        <div class="form-group">       
                <label asp-for="Price" class="control-label"></label>
                <div class="">
                <input class="form-control " asp-for="Price">
            </div>
        </div>
        
        <div class="form-group">       
                <label asp-for="Picture" class="control-label"></label>
                <div>
            <input class="form-control" asp-for="Picture">
            </div>
    </div>

        <div class="form-group">
            <div>
                <button type="submit" class="btn btn-success">Update</button>
                <a class="btn btn-info" asp-controller="Bike" asp-action="Index">Back to list</a>
            </div>
        </div>
        </div>

        <div class="row col-md-6">
            &nbsp
            <div class="form-group">       
                <div>
                    <img src="@Model.Picture" alt="Bike pic" height="400" width="600">
            </div>
        </div>
    </div>
</form>