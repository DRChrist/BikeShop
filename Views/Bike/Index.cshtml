@model IEnumerable<BikeShop.Models.Entities.Bike>

@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            @foreach(var bike in Model)
            {
                if(bike.BikeId == 1)
                {
                    var bi = bike;
            <img src="@bi.Picture" alt="ASP.NET" class="img-responsive"  height="400" width="600"/>
            <div class="carousel-caption" role="option">
                <p>
                    <a class="btn btn-default" asp-controller="Bike" asp-action="Details" asp-route-id=@bi.BikeId>
                        Learn More
                    </a>
                </p>
            </div>
                }
            }
        </div>
        <div class="item">
            @foreach(var bike in Model)
            {
                if(bike.BikeId == 2)
                {
                    var bi = bike;
            <img src="@bi.Picture" alt="ASP.NET" class="img-responsive" height="400" width="600"/>
            <div class="carousel-caption" role="option">
                <p>
                    <a class="btn btn-default" asp-controller="Bike" asp-action="Details" asp-route-id=@bi.BikeId>
                        Learn More
                    </a>
                </p>
            </div>
                }
            }
        </div>
        <div class="item">
             @foreach(var bike in Model)
            {
                if(bike.BikeId == 3)
                {
                    var bi = bike;
            <img src="@bi.Picture" alt="ASP.NET" class="img-responsive" height="400" width="600"/>
            <div class="carousel-caption" role="option">
                <p>
                    <a class="btn btn-default" asp-controller="Bike" asp-action="Details" asp-route-id=@bi.BikeId>
                        Learn More
                    </a>
                </p>
            </div>
                }
            }
        </div>
        <div class="item">
            @foreach(var bike in Model)
            {
                if(bike.BikeId == 6)
                {
                    var bi = bike;
            <img src="@bi.Picture" alt="ASP.NET" class="img-responsive" height="400" width="600"/>
            <div class="carousel-caption" role="option">
                <p>
                    <a class="btn btn-default" asp-controller="Bike" asp-action="Details" asp-route-id=@bi.BikeId>
                        Learn More
                    </a>
                </p>
            </div>
                }
            }
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

@await Html.PartialAsync("_AddBike")

   <table class="table  table-striped table-hover"> 
        <thead class="row">
            <th>&nbsp &nbsp &nbsp &nbsp</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Manufacturer)</th>
            <th>@Html.DisplayNameFor(model => model.Type)</th>
            <th>@Html.DisplayNameFor(model => model.Gender)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th ><span class="col-xs-offset-1">Action<span></th>
           
        </thead>
     @foreach(var b in Model)
        {           
            <tr> 
                <td><img src="@b.Picture" alt="Bike Pic" height="50" width="80"/></td>
                <td>@b.Name</td>
                <td>@b.Manufacturer</td>
                <td>@b.Type</td>
                <td>@b.Gender</td>
                <td>@b.Price</td>

                <td class="row">
                    <a class="btn btn-primary" asp-controller="Bike" asp-action="Update" asp-route-id=@b.BikeId>Add To Cart</a>
                    <a class="btn btn-info" asp-controller="Bike" asp-action="Details" asp-route-id=@b.BikeId>Details</a>
                </td>  
                   @await Html.PartialAsync("_EditBikes", b)
           
            </tr>     
        }
     
      </table>