@model BikeShop.Models.Entities.Bike

@using Microsoft.AspNetCore.Identity
@using BikeShop.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <td class="row">
        <a class="btn btn-danger" asp-controller="Bike" asp-action="Delete" asp-route-id=@Model.BikeId>Delete</a>
        <a class="btn btn-warning" asp-controller="Bike" asp-action="Update" asp-route-id=@Model.BikeId>Update</a>
    </td>  
}